<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Initiative Tracker" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#222" MinHeight="300" MinWidth="400">
    <Grid Background="#222">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Background="#333" Foreground="#EEE">
            <MenuItem Header="File" Background="#333" Foreground="#EEE">
                <MenuItem Name="ExportMenuItem" Header="Export Encounter" Background="#333" Foreground="#EEE"/>
                <MenuItem Name="ImportMenuItem" Header="Import Encounter" Background="#333" Foreground="#EEE"/>
            </MenuItem>
            <MenuItem Header="Players" Background="#333" Foreground="#EEE">
                <MenuItem Name="EditPlayers" Header="Edit Players" Background="#333" Foreground="#EEE"/>
                <MenuItem Name="AddPlayers" Header="Add active players to initiative list" Background="#333" Foreground="#EEE"/>
            </MenuItem>
            <MenuItem Header="Sort" Background="#333" Foreground="#EEE">
                <MenuItem Name="SortAscMenuItem" Header="Ascending" Background="#333" Foreground="#EEE"/>
                <MenuItem Name="SortDescMenuItem" Header="Descending" Background="#333" Foreground="#EEE"/>
            </MenuItem>
            <MenuItem Header="Dice Roller" Background="#333" Foreground="#EEE">
                <MenuItem Name="RollNPCInitiative" Header="Roll NPC Init" Background="#333" Foreground="#EEE"/>
                <MenuItem Name="OpenDiceRoller" Header="Open Dice Roller" Background="#333" Foreground="#EEE"/>
            </MenuItem>
        </Menu>
        <StackPanel Name="MainPanel" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Button Name="NextRoundButton" Grid.Row="0" Content="Next Turn"
                    Width="80" Height="30"
                    FontSize="16"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="#444" Foreground="#EEE"/>
            <StackPanel Name="InitiativeListPanel" Grid.Row="1" Orientation="Horizontal"
                        HorizontalAlignment="Stretch" VerticalAlignment="Top"
                        Margin="0,10,0,10">
                <!-- Initiative entries will be added here dynamically -->
            </StackPanel>
            <Button Name="InsertButton" Grid.Row="1" Content="+"
                    Width="40" Height="40"
                    FontSize="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>