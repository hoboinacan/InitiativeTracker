<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Initiative Tracker" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Name="ExportMenuItem" Header="Export Encounter"/>
                <MenuItem Name="ImportMenuItem" Header="Import Encounter"/>
            </MenuItem>
        </Menu>
        <Button Name="NextRoundButton" Grid.Row="1" Content="->"
                Width="40" Height="40"
                FontSize="24"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>
        <StackPanel Name="MainPanel" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button Name="InsertButton" Grid.Row="1" Content="+"
                    Width="40" Height="40"
                    FontSize="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>